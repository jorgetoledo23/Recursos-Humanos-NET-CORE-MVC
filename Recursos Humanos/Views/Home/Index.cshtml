@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row justify-content-center mt-2">

        <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-copyright" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Administracion de Departamentos</h5>
                    <p class="card-text">Crea, Edita o Elimina Departamentos en el Sistema para la administracion y gestion de RRHH</p>
                    <a asp-controller="Departamento" asp-action="DepartamentoIndex"
                       class="btn btn-outline-danger col-12">Ir a la Administracion</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-laptop" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Administracion de Colaboradores</h5>
                    <p class="card-text">Crea, Edita o Elimina Departamentos en el Sistema para la administracion y gestion de RRHH</p>
                    <a asp-controller="Colaborador" asp-action="ColaboradorIndex"
                       class="btn btn-outline-info col-12">Ir a la Administracion</a>
                </div>
            </div>
        </div>

    </div>
</div>
